<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bgGbk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/sizejdl2"
        android:layout_height="@dimen/sizejdl2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tittle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/btnlayout"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/namapemain1"
                android:textSize="@dimen/namapemain"
                android:fontFamily="sans-serif-condensed"/>

            <ImageView
                android:id="@+id/gunting1"
                android:layout_width="@dimen/btnpil"
                android:layout_height="@dimen/btnpil"
                android:src="@drawable/gunting" />

            <ImageView
                android:id="@+id/batu1"
                android:layout_width="@dimen/btnpil"
                android:layout_height="@dimen/btnpil"
                android:src="@drawable/batu" />

            <ImageView
                android:id="@+id/kertas1"
                android:layout_width="@dimen/btnpil"
                android:layout_height="@dimen/btnpil"
                android:src="@drawable/kertas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/tlstengah"
            android:layout_height="@dimen/untktulis"
            android:layout_gravity="center"

            android:gravity="center">

            <ImageView
                android:id="@+id/tlstengah"
                android:layout_width="@dimen/tlstengah"
                android:layout_height="wrap_content"
                android:src="@drawable/vs" />


        </LinearLayout>

        <LinearLayout
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/namapemain2"
                android:textSize="@dimen/namapemain"
                android:fontFamily="sans-serif-condensed"/>

            <ImageView
                android:id="@+id/gunting2"
                android:layout_width="@dimen/btnpil"
                android:layout_height="@dimen/btnpil"
                android:src="@drawable/gunting" />

            <ImageView
                android:id="@+id/batu2"
                android:layout_width="@dimen/btnpil"
                android:layout_height="@dimen/btnpil"
                android:src="@drawable/batu" />

            <ImageView
                android:id="@+id/kertas2"
                android:layout_width="@dimen/btnpil"
                android:layout_height="@dimen/btnpil"
                android:src="@drawable/kertas" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/btnpilres"
            android:layout_height="@dimen/btnpilres"
            android:id="@+id/refresh"
            android:layout_alignParentRight="true"
            android:src="@drawable/refresh"
            android:layout_marginRight="@dimen/marginbtn"/>
    </RelativeLayout>

</LinearLayout>
