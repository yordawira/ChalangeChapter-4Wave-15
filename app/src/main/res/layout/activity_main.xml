<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/sizeTittle2"
        android:layout_height="@dimen/sizeTittle2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tittle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/buttonLayout"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/namePlayer1"
                android:textSize="@dimen/namePlayer"
                android:fontFamily="sans-serif-condensed"/>

            <ImageView
                android:id="@+id/iv_scissor1"
                android:layout_width="@dimen/buttonEmerge"
                android:layout_height="@dimen/buttonEmerge"
                android:src="@drawable/ic_scissor" />

            <ImageView
                android:id="@+id/iv_rock1"
                android:layout_width="@dimen/buttonEmerge"
                android:layout_height="@dimen/buttonEmerge"
                android:src="@drawable/ic_rock" />

            <ImageView
                android:id="@+id/iv_paper1"
                android:layout_width="@dimen/buttonEmerge"
                android:layout_height="@dimen/buttonEmerge"
                android:src="@drawable/ic_paper" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/tittleMiddle"
            android:layout_height="@dimen/forWrite"
            android:layout_gravity="center"

            android:gravity="center">

            <ImageView
                android:id="@+id/iv_vs"
                android:layout_width="@dimen/tittleMiddle"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vs" />


        </LinearLayout>

        <LinearLayout
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/namePlayer2"
                android:textSize="@dimen/namePlayer"
                android:fontFamily="sans-serif-condensed"/>

            <ImageView
                android:id="@+id/iv_scissor2"
                android:layout_width="@dimen/buttonEmerge"
                android:layout_height="@dimen/buttonEmerge"
                android:src="@drawable/ic_scissor" />

            <ImageView
                android:id="@+id/iv_rock2"
                android:layout_width="@dimen/buttonEmerge"
                android:layout_height="@dimen/buttonEmerge"
                android:src="@drawable/ic_rock" />

            <ImageView
                android:id="@+id/iv_paper2"
                android:layout_width="@dimen/buttonEmerge"
                android:layout_height="@dimen/buttonEmerge"
                android:src="@drawable/ic_paper" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/buttonChooseReset"
            android:layout_height="@dimen/buttonChooseReset"
            android:id="@+id/iv_refresh"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_refresh"
            android:layout_marginRight="@dimen/marginButton"/>
    </RelativeLayout>

</LinearLayout>